<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Светлая тема-->
    <style name="Theme.CalculatorLight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantLight</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryLight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryLight</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantLight</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryLight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <!--Темная тема-->
    <style name="Theme.CalculatorDark" parent="Theme.CalculatorLight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryVariantDark</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryDark</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <!--Стиль для кнопок с цифрами-->
    <style name="btnDigit">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/zeyada</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/btnTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/btnCornerRadiusDef</item>
        <item name="rippleColor">@color/orange</item>
        <item name="strokeColor">?attr/colorOnSecondary</item>
        <item name="android:layout_width">@dimen/sizeZero</item>
        <item name="android:layout_height">@dimen/sizeZero</item>
        <item name="android:insetTop">@dimen/btnInsetDef</item>
        <item name="android:insetBottom">@dimen/btnInsetDef</item>
        <item name="strokeWidth">@dimen/btnStrokeWidthDef</item>
    </style>
    <!--Стиль для кнопок операций-->
    <style name="btnOperation">
        <item name="android:layout_width">@dimen/sizeZero</item>
        <item name="android:layout_height">@dimen/sizeZero</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:insetTop">@dimen/btnInsetDef</item>
        <item name="android:insetBottom">@dimen/btnInsetDef</item>
        <item name="android:textSize">@dimen/btnTextSize</item>
        <item name="cornerRadius">@dimen/btnCornerRadiusDef</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/iconPaddingDef</item>
        <item name="iconSize">@dimen/iconSizeDef</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/rippleOperationColor</item>
        <item name="strokeColor">?attr/colorOnSecondary</item>
        <item name="strokeWidth">@dimen/btnStrokeWidthDef</item>
    </style>
</resources>